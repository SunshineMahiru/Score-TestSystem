<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.LoginController"
      styleClass="bootstrap3-root"
      spacing="20"
      alignment="CENTER"
      prefWidth="400" prefHeight="300">

    <Label text="下北泽大学成绩管理系统" styleClass="h2">
        <font>
            <Font size="24"/>
        </font>
    </Label>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="学号:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" promptText="请输入学号"
                   GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="密码:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="请输入密码"
                       GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>

        <!-- 修改这里 ↓↓↓ -->
        <Label fx:id="statusLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"
               wrapText="true" maxWidth="200"
               style="-fx-text-fill: red;"/> <!-- 添加红色文本样式 -->
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="loginButton" text="登录"
                styleClass="btn-primary" onAction="#handleLogin"
                prefWidth="100" prefHeight="30"/>

        <Button fx:id="registerButton" text="注册"
                styleClass="btn-success" onAction="#handleRegister"
                prefWidth="100" prefHeight="30"/>
    </HBox>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
