<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.com.example.controller.MainController"
            styleClass="bootstrap3-root">

    <top>
        <VBox spacing="10" alignment="CENTER">
            <Label text="大学成绩管理系统" styleClass="h2">
                <font>
                    <Font size="24"/>
                </font>
            </Label>
            <Label fx:id="welcomeLabel" text="欢迎使用成绩管理系统" styleClass="h3"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <TableView fx:id="scoreTable" prefWidth="700" prefHeight="400">
                <columns>
                    <TableColumn fx:id="studentIdColumn" text="学号" prefWidth="100"/>
                    <TableColumn fx:id="studentNameColumn" text="姓名" prefWidth="100"/>
                    <TableColumn fx:id="courseColumn" text="课程" prefWidth="300"/>
                    <TableColumn fx:id="scoreColumn" text="成绩" prefWidth="100"/>
                </columns>
            </TableView>

            <HBox spacing="20" alignment="CENTER">
                <Button text="导出成绩" styleClass="btn-info"
                        onAction="#handleExport" prefWidth="120" prefHeight="40"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" padding="10">
            <Label text="© 2025 大学成绩管理系统" styleClass="small"/>
        </HBox>
    </bottom>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
